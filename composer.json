{
    "name": "alexsoft/fee-calculator",
    "type": "project",
    "require": {
        "php": "~8.4.0 || ~8.5.0",
        "ext-intl": "*",
        "brick/math": "^0.14.1",
        "brick/money": "^0.10.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.33",
        "phpunit/phpunit": "^12.5.1"
    },
    "autoload": {
        "psr-4": {
            "Alexsoft\\FeeCalculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alexsoft\\FeeCalculator\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan --memory-limit=-1",
        "test": "./vendor/bin/phpunit --testdox --colors=auto"
    }
}
